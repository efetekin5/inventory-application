extends layout 

block content 
    h1 Category: #{title}
    h5 #{description}

    br

    h3 All Items:
    br
    hr

    if categoryItems.length
        ul 
            each item in categoryItems
                li 
                    h5 
                        a(href=item.url) #{item.name}
    else 
        h5 
            a(href=categoryUrl + '/delete') Delete Category